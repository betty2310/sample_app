<%= form_with(model: @micropost) do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("micropost.placeholder") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpg,image/gif,image/png" %>
  </span>
  <%= f.submit t("post"), class: "btn btn-primary" %>
<% end %>

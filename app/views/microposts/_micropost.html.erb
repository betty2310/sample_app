<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image.variant(:display) if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t("micropost.posted_ago", time: time_ago_in_words(micropost.created_at)) %>.
    <% if current_user? micropost.user %>
      <%= link_to t("delete"), micropost, data: {turbo_method: :delete,
                                                 turbo_confirm: t("user.delete.confirm")} %>
    <% end %>
  </span>
</li>
